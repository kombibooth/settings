{
  "extends": "airbnb/base",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-use-before-define": 0,
    "space-before-function-paren": 0,
    "func-names": 0,
    "no-use-before-define": 0,
    "space-before-function-paren": [2, "always"],
    "id-length": [1, {"exceptions": ["i", "j", "e", "a", "b"]}]
  }
}
